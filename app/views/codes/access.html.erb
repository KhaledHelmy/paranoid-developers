<%= form_tag(method: "post", class: "nifty_form")do %>
<h1>Give Access</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Users</th>
      
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><h5><%= user.email %></h5></td>
        <td> <%= check_box("user", user.id, {checked: @hasAccess.include?(user.id)}) %></td>
     </tr>
    <% end %>
  </tbody>
</table> 
</br>

 <td><%= submit_tag 'Give Access', class: "btn btn-danger "  %></td>
 <td><%= link_to 'Back', url_for(:back), class: "btn btn-danger " %></td>

<% end %>
