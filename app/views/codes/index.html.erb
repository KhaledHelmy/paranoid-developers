<p id="notice"><%= notice %></p>

<h1>Listing Codes</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Code</th>
      <th>User</th>
      <th></th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% @codes.each do |code| %>
      <tr>
        <td><h5><%= code.file_name %></h5></td>
        <td><h5><%= code.user.email %></h5></td>
        <td><%= link_to 'Show', code, class: "btn btn-info btn-sm", "data-no-turbolink" => true %></td>
        <td><%= link_to 'Edit', edit_code_path(code), class: "btn btn-info btn-sm", "data-no-turbolink" => true %></td>
        <td><%= link_to 'Give Access', access_code_path(code), class: "btn btn-info btn-sm" %></td> 
        <td><%= link_to 'Delete', code, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>

      </tr>
    <% end %>
  </tbody>
</table> 
</br>

<%= link_to 'New Code', new_code_path, class: "btn btn-primary", "data-no-turbolink" => true  %>
